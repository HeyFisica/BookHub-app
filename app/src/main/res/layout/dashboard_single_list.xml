<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id ="@+id/listView"
    android:background="@color/white"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"

  >

    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/book_app_icon_web"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/txtRecyclerRowItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgBook"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/list_items"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/nameOfAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgBook"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:padding="13dp"
        android:text="@string/name_of_author"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgBook"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="@string/rs_233"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/imgRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtRecyclerRowItem"
        android:layout_marginStart="320dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_star_rate_24"


        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/txtRating"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imgRate"
        android:layout_marginStart="350dp"
        android:layout_marginTop="30dp"
        android:text="@string/_3_5"
        android:textColor="#FFD600"
        android:textSize="20sp" />
    >


    </androidx.cardview.widget.CardView>